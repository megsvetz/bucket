<div class="row">

  <div class="text-center">
    <div class="row">
      <div class="col-sm-12">

        <h1><%= current_user.name %></h1>
        <% if current_user.avatar.present? %>
          <%= image_tag(current_user.avatar.url(:medium), :class => "img-circle img-responsive img-center") %><br/>
        <% end %>
         <% if current_user.bio.present? %>
          <h3><%= current_user.bio %></h3><br/>
        <% end %>
        <br />
        <hr />

      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <!-- <div class="col-sm-12 text-center"> -->
      <div class="row">
        <% @categories.each do |category|%>
        <div class="col-sm-6">
          <% if category.cat_pic.present? %>
            <%= image_tag(@category.cat_pic.url(:medium), :class => "img-circle img-responsive img-center") %><br />
          <% else %>
            <img class="img-circle img-responsive img-center" src="http://placehold.it/200x200" alt=""><br />
          <% end %>

           <ul><% category.goals.each do |goal| %>
            <li> <%= goal.title %> </li>
            <% end %>
          </ul> <!-- goals -->
        </div> <!-- col-sm-6 -->
        <% end %> <!-- categories -->
      </div> <!-- row -->
    </div> <!-- col-sm-12 -->

  </div>

</div>

