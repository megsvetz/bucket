<div class="row">

  <div class="text-center">
    <div class="row">
      <div class="col-sm-12">

        <h1><%= current_user.name %></h1>
        <% if current_user.avatar.present? %>
          <%= image_tag(current_user.avatar.url(:medium), :class => "img-circle img-responsive img-center img-rounded img-thumbnail") %><br/>
        <% end %>
         <% if current_user.bio.present? %>
          <h3><%= current_user.bio %></h3><br/>
        <% end %>
        <br />
        <hr />

      </div>
    </div>
  </div>

  <div class="container">
    <!-- <div class="col-sm-12 text-center"> -->
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>My Buckets&nbsp;&nbsp;<a href="<%= new_category_path%>" class="btn btn-info"><span class = "glyphicon glyphicon-plus"></span></a></h2>
        <% @categories.each do |category|%>
        <div class="col-lg-4 text-center">
          <% if category.cat_pic.present? %>
            <%= image_tag(category.cat_pic.url(:medium), :class => "img-circle img-responsive img-center img-thumbnail img-rounded") %><br />
          <% else %>
            <img class="img-circle img-responsive img-center" src="http://placehold.it/200x200" alt=""><br />
          <% end %>
          <h2> <%= link_to("#{category.name}", category_goals_path(category.id)) %></h3>
          <% category.goals.each do |goal| %>
            <h4><input type="checkbox" value= "true">&nbsp;&nbsp;
            <%= goal.title %> </h4>
          <% end %>
        </div> <!-- col-sm-6 -->
        <% end %> <!-- categories -->
      </div> <!-- row -->
    </div> <!-- col-sm-12 -->

  </div>

</div>
