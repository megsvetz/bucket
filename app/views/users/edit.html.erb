<row>
  <%= link_to "Back", :back, class: "backButton", style: "float:left" %>
</row><br /><br />

<div class="text-center">
  <h1>Edit Profile</h1><hr />
    <h2><%= @user.username.to_s.humanize %></h2>

  <%= form_for(@user, html: { method: :put }) do |f| %>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true %>
    </div><br />

    <div class="field">
      <%= f.label :bio %><br />
      <%= f.text_area :bio, autofocus: true %>
    </div><br />

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div><br />

    <div class="field" style="display:inline-block">
      <%= f.label("Upload Photo") %>
      <%= f.file_field :avatar %>
    </div><br /><br /><br/>

    <div class="actions">
      <%= f.submit "Update", class: "myButton" %>
    </div><br />
  <% end %>

</div>
