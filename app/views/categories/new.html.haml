= form_for @category, :html => { :multipart => true } do |f|
  %h1 Make a New Bucket
  %br/
  %h4
    Bucket List Name: #{f.text_field :name, class: "form-control", :placeholder => "To do before 90", :style => "width:100%;"}
  %br
    %h4
      Make list private? #{f.check_box :private, {}, true, false}
      %h4
        %br
          %h4
            Upload Photo: #{f.file_field :cat_pic}
          %br
            = f.hidden_field :user_id, value: current_user.id
            %br
              = f.submit("Create Bucket", class: "myButton")
              %br
                %br
