<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class= "page-header">My Buckets&nbsp;&nbsp;<a href="<%= new_category_path%>" class="btn btn-info"><span class = "glyphicon glyphicon-plus"></span></a></h1>

    </div>
    <% @categories.each do |category| %>
      <% if current_user.id == category.user_id %>
        <div class="col-lg-4 col-sm-6 text-center">
          <% if category.cat_pic.present? %>
          <%= image_tag category.cat_pic.url, :class => "img-circle img-responsive img-center img-rounded img-thumbnail"%>
          <% end %>
          <h3> <%= link_to("#{category.name}", category_goals_path(category.id)) %></h3>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= will_paginate @posts %>
