.structure
  .text-center
    = form_for(@category) do |f|
      - if current_user.id == @category.user_id
        %h1 Edit
        %hr/
        %h2
          "#{"#{@category.name}"}"
        %br/
        %h4
          Bucket List Name: #{f.text_field :name, class: "form-control", :placeholder => "To do before 90", :style => "width:100%;"}
        %br
          %h4
            Make list private? &nbsp;#{f.check_box :private, {}}
            %h4
              %br
                %h4 Upload Photo:
                = f.file_field :cat_pic, :style => "display:inline-block"
                %br
                %br
                  = f.hidden_field :user_id, value: current_user.id
                  = f.submit("Save Edit", class: "btn btn-success")
